{
  "name": "local-chat-app",
  "version": "1.0.0",
  "description": "A simple local network chat application with Node.js, Socket.IO, SQLite, and React",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "docker:build": "docker build -t local-chat .",
    "docker:run": "docker run -p 3001:3001 --network host --name local-chat-app local-chat",
    "docker:stop": "docker stop local-chat-app && docker rm local-chat-app",
    "docker:compose:up": "docker compose up -d",
    "docker:compose:down": "docker compose down"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bonjour-service": "^1.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "path": "^0.12.7",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "chat",
    "socket.io",
    "sqlite",
    "react",
    "local-network",
    "mdns",
    "docker"
  ],
  "author": "",
  "license": "MIT"
}
