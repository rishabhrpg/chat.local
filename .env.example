# Server Configuration
PORT=80
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
DB_PATH=./server/chat.db

# Security Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# mDNS Configuration (for local network discovery)
SERVICE_NAME=Local Chat
MDNS_HOSTNAME=chat.local

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/*,text/*,application/pdf,application/zip,.doc,.docx,.xls,.xlsx

# CORS Configuration
CORS_ORIGIN=*

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=*

# Message Configuration
MESSAGE_LIMIT=100
